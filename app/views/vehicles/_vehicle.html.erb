<div class="row">
	<div class="form-group col-md-3">
		<%= f.label :model, class: "text-uppercase" %>
		<%= f.text_field :model, autofocus: true, required: true, class: "form-control", placeholder: "Modelo"%>
	</div>
	<div class="form-group col-md-3">       
		<%= f.label :brand, class: "text-uppercase" %>
		<%= f.text_field :brand, required: true, class: "form-control", placeholder: "Marca"%>
	</div>
	<div class="form-group col-md-3">
		<%= f.label :license_plate, class: "text-uppercase" %>
		<%= f.text_field :license_plate, required: true, class: "form-control", placeholder: "Placa"%>
	</div>
	<div class="form-group col-md-3">       
		<%= f.label :color, class: "text-uppercase" %>
		<%= f.text_field :color, required: true, class: "form-control", placeholder: "Cor"%>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-3">
		<%= f.label :doors_number, class: "text-uppercase" %>
		<%= f.number_field :doors_number, in: 1..10, step: 1, required: true, class: "form-control", placeholder: "Portas"%>
	</div>
	<div class="form-group col-md-3">       
		<%= f.label :chassi, class: "text-uppercase" %>
		<%= f.text_field :chassi, required: true, class: "form-control", placeholder: "Chassi"%>
	</div>
	<div class="form-group col-md-3">
		<%= f.label :renavam, class: "text-uppercase" %>
		<%= f.text_field :renavam, required: true, class: "form-control", placeholder: "Renavam"%>
	</div>
	<div class="form-group col-md-3">       
		<%= f.label :year, class: "text-uppercase" %>
		<%= f.date_field :year, required: true, class: "form-control", placeholder: "Ano"%>
	</div>
</div>